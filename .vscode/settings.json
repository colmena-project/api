{
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[typescript]": {
      "editor.formatOnSave": true,
  },
  "editor.codeActionsOnSave": {
      // For ESLint
      "source.fixAll.eslint": true,
  },
  "javascript.validate.enable": false,
  "eslint.workingDirectories": ["."]
}