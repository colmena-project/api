{
  "name": "colmena-core-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon -L . --ignore './logs/*'",
    "inspect": "nodemon --inspect=0.0.0.0 -L . --ignore './logs/*'",
    "start": "node .",
    "eslint": "eslint --debug --ext .js cloud",
    "seed": "for filename in ./seeds/*; do mongoimport --mode=upsert --uri ${MONGO_DSN} --file $filename;  done",
    "exportCollection": "dump() { mongoexport --uri ${MONGO_DSN} --collection $1 -o \"./seeds/$1.json\"  ; }; dump",
    "exportDB": "mongodump --uri ${MONGO_DSN} -o './backups/'$( date -Iseconds)",
    "importDB": "mongorestore --uri ${MONGO_DSN}"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.5.3",
    "escape-html": "^1.0.3",
    "expo-server-sdk": "^3.1.0",
    "express": "^4.17.1",
    "hat": "0.0.3",
    "parse-dashboard": "^2.0.5",
    "parse-server": "^3.10.0",
    "saslprep": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.1",
    "prettier": "^1.19.1"
  }
}
